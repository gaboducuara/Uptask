{
"compilerOptions": {
  "outDir": "./dist",
  "rootDir": "./src",
  "types": ["jest", "node"],
  "lib": [
    "esnext"
  ],
  "target": "ESNext",
  "moduleResolution": "NodeNext",
  "module": "NodeNext",
  "strict": false,
  "isolatedModules": true,
  "sourceMap": true,
  "esModuleInterop": true,
  "declaration": true
},
"include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.test.ts", "src/**/*.test.tsx"],
  "exclude": ["node_modules", "dist"]
}